<h2><%= @title %></h2>

<div class="tabbox" id="events_tabbox">
    <%# 企画の種類でタブを作成 %>
    <input type="radio" name="tabset" id="reg1127_check" checked><label for="reg1127_check" class="tab">11/27(金)</label>
    <input type="radio" name="tabset" id="reg1128_check"><label for="reg1128_check" class="tab">28(土)</label>
    <input type="radio" name="tabset" id="reg1129_check"><label for="reg1129_check" class="tab">29(日)</label>
    <input type="radio" name="tabset" id="reg1130_check"><label for="reg1130_check" class="tab">30(月)</label>
    <input type="radio" name="tabset" id="reg1201_check"><label for="reg1201_check" class="tab">12/1(火)</label>
    <input type="radio" name="tabset" id="reg1202_check"><label for="reg1202_check" class="tab">2(水)</label>
    <input type="radio" name="tabset" id="reg1203_check"><label for="reg1203_check" class="tab">3(木)</label>
    <input type="radio" name="tabset" id="reg1204_check"><label for="reg1204_check" class="tab">4(金)</label>
    <input type="radio" name="tabset" id="reg1205_check"><label for="reg1205_check" class="tab">5(土)</label>
    <input type="radio" name="tabset" id="reg1206_check"><label for="reg1206_check" class="tab">6(日)</label>
    <input type="radio" name="tabset" id="guerrillas_check"><label for="guerrillas_check" class="tab">ゲリラ企画</label>
    <input type="radio" name="tabset" id="permanents_check"><label for="permanents_check" class="tab">常設企画</label>

    <% @regulars.group_by { |e| e.period.date }.each do |date, events| %>
        <%# 「日付」タブの中身を作成 %>
        <div class="tabcontent" id="reg<%= date.strftime('%m%d') %>_content">
            <%# 企画の日付を表示 %>
            <div class="target-date"><a href='/ryosai2020/<%= date %>.html'><%= date %></a></div>

            <%# 企画の画像を2列に並べて表示 %>
            <div class="img-2col">
            <% events.each do |event| %>
                <% if !event.compressed_path.nil? %>
                    <a href='/ryosai2020/<%= event.period.date %>.html#<%= event.id %>'>
                        <img src="/ryosai2020/<%= IMAGE_BASE_PATH %>/<%= event.compressed_path %>" class="event-image"/>
                    </a>
                <% end %>
            <% end %>
            </div>
            </br>
        </div>
    <% end %>

    <%# 「ゲリラ企画」タブの中身を作成 %>
    <div class="tabcontent" id="guerrillas_content">
        <%# ゲリラ企画の画像を2列に並べて表示 %>
        <div class="img-2col">
        <% @guerrillas.each do |event| %>
            <% if !event.compressed_path.nil? %>
                <a href='/ryosai2020/guerrilla.html#<%= event.id %>'>
                    <img src="/ryosai2020/<%= IMAGE_BASE_PATH %>/<%= event.compressed_path %>" class="event-image"/>
                </a>
            <% end %>
        <% end %>
        </div>
    </div>

    <%# 「常設企画」タブの中身を作成 %>
    <div class="tabcontent" id="permanents_content">
        <%# 常設企画の画像を2列に並べて表示 %>
        <div class="img-2col">
        <% @permanents.each do |event| %>
            <% if !event.compressed_path.nil? %>
                <a href='/ryosai2020/permanent.html#<%= event.id %>'>
                    <img src="/ryosai2020/<%= IMAGE_BASE_PATH %>/<%= event.compressed_path %>" class="event-image"/>
                </a>
            <% end %>
        <% end %>
        </div>
    </div>
</div>
